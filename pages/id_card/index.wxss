.top {
    background: linear-gradient(to right, #6C67FF 0%, #3CA5FE 100%);
    position: relative;
    padding: 10px 0 50px;
}

.position {
    margin-top: 0;

}

.position .info {
    background: none;
    color: #FFF;
}

.box-1 {
    position: relative;
    top: -20px;
    z-index: 11;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}

.box-1 .item {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 40%;
    border-radius: 15px;
    background-color: #FFF;
    padding: 10px 0;
}

.box-1 .item image {
    width: 30px;
}

.box-1 .item text {
    padding-left: 5px;
}

.title {
    padding: 20px;
}

.title .text {
    font-weight: bold;
    font-size: 18px;
}
.title .e_text {
    font-size: 10px;
    color: #333333;
    padding-left: 5px;
}

.box-id-card {
    display: flex;flex-direction: column;
    justify-content: center;align-items: center;
}
.id-card-preview {
    width: 80%;
    background-color: #FFF;
    border-radius: 20px;
    margin-bottom: 20px;
    padding: 10px 20px;
    box-sizing: border-box;
    position: relative;
}
.add-file {
    position: absolute;
    width: 100%;height: 100%;
    top: 0;left: 0;
    border-radius: 20px;
    display: flex;
    justify-content: center;align-items: center;
    background-color: rgba(74, 116, 238, 0.5);
}
.add-file .iconfont {
    width: 60px;height: 60px;background-color: #FFF;border-radius: 50%;
    color: #4A74EE;
    text-align: center;
    line-height: 60px;
    font-size: 35px;
}
.id-card-preview image {
    width: 100%;
}
.upload-done {
    margin: 0 20px;
    background-color: #4A74EE;
    color: #FFF;text-align: center;
    border-radius: 50px;line-height: 3;
}
.tips {
    padding: 20px;
    color: #999999;
}