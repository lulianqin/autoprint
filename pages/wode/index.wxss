/* pages/wode/index.wxss */
.body_css {
  width: 100%;
  height: 100%;
}

.tx_view_css {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  background-color: #4A74EE;
  width: 100%;

  border-radius: 0 0 15% 15%;
  box-shadow: 0px 10px 10px -10px #5E5E5E;
}

.tx_img_css {
  margin-top: 3em;
  width: 5em;
  height: 5em;
  border-radius: 50% 50% 50% 50%;
}

.tx_name_css {
  margin-top: 1em;
  margin-bottom: 1em;
  color: #FFF;
  font-size: 1em;
}

.list_view_css {
  margin-top: 1em;
  margin-left: 3%;
  width: 94%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  background-color: #FFF;
  border-radius: 1em;
}

.list_nr_view_css {
  display: flex;
  align-items: center;
  width: 90%;
  background-color: #FFF;
  margin: .9em;
}

.list_name_css {
  margin-left: 1em;
  font-size: 1em;
  position: relative;
}

.icon-wenku:before {
  content: "\e6aa";
  /* // 这里可以控制图标大小和颜色 */
  color: #4A74EE;
  font-size: 1.8em;
}

.list_qianjin_css {
  flex: 1;
  text-align: right;
}

.icon-qianjin:before {
  content: "\e614";
  /* // 这里可以控制图标大小和颜色 */
  color: #4A74EE;
  font-size: 1.5em;
}

.icon-fenxiang:before {
  content: "\e602";
  color: #4A74EE;
  font-size: 1.8em;
}

.icon-dingdan:before {
  content: "\e601";
  color: #4A74EE;
  font-size: 1.8em;
}