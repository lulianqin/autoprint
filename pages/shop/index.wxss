.top {
    background: linear-gradient(to right, #6C67FF 0%, #3CA5FE 100%);
    position: relative;
    padding: 10px 0;
}

.position {
    margin-top: 0;

}

.position .info {
    background: none;
    color: #FFF;
}

.list {
    position: relative;
    top:10px;
}

.item-printer {
    border-radius: 20px;
    background-color: #FFF;
    padding: 15px;
    margin: 0 15px 15px;
    box-shadow: 0 0 10px 0 #ddd;
}

.printer-text {
    display: flex;
    flex-direction: row;
    line-height: 1.5;
    font-size: 14px;
}

.item-field-name {
    width: 6em;
    /* padding-right: 1em; */
    text-align: right;
    flex-shrink: 0;
}

.item-field-value {
    flex-grow: 1;
    flex-shrink: 1;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    text-align: justify;
}

.text-red {
    color: #FF0000;
}


.search-box {
    width: 100%;
    bottom: 20px;
    padding: 0 20px 20px;
    box-sizing: border-box;
    display: flex;
}

.print-code {
    background-color: #FFF;
    border: 1px solid #4A74EE;
    flex-grow: 1;
    border-radius: 50px 0 0 50px;
    height: 50px;
    line-height: 50px;
    padding-left: 20px;
}

.search_button {
    text-align: center;
    background-color: #4A74EE;
    border-radius: 0 50px 50px 0;
    border: none;
    font-weight: normal;
    margin: 0;
    padding: 0;
    display: block;
    color: #FFF;
    line-height: 3;
    width: 100px;
}

.tips {
    padding: 0 20px 15px;
    color: #FF0000;
}