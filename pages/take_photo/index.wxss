.box {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 10;
    width: 100%;
    height: 100vh;
}

.camera {
    width: 100%;
    height: 100%;
}

.btn-box {
    position: absolute;
    bottom: 40px;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.btn-take {
    width:  60px;
    height: 60px;
    border-radius: 50%;
    background-color: #F00;
    color: #fff;
    text-align: center;
    line-height: 60px;
}